            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameRailway)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdate)
            </td>
